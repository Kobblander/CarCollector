<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent" android:weightSum="1" android:id="@+id/">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/home_title" android:weightSum="1"
            android:baselineAligned="true" android:layout_weight="0.07" android:paddingTop="40dp">
        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Hello,"
                android:id="@+id/welcome_text" android:textSize="75dp"
                android:layout_gravity="top|left" android:layout_weight="1.14"/>
    </LinearLayout>
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:textAppearance="?android:attr/textAppearanceLarge" android:text="Captain America"
              android:id="@+id/player_name" android:textSize="75dp"
              android:paddingTop="30dp" android:layout_weight="0.07"/>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.2" android:layout_marginTop="50dp">
    </LinearLayout>
</LinearLayout>