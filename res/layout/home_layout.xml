<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent" android:weightSum="1">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/home_title" android:weightSum="1"
            android:baselineAligned="true" android:layout_weight="0.07" android:paddingTop="40dp"
            android:paddingLeft="17dp" android:paddingRight="17dp">
        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/homeWelcome"
                android:id="@+id/welcome_text" android:textSize="95dp"
                android:layout_weight="1.14" android:typeface="normal"
                />
    </LinearLayout>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="1" android:paddingRight="20dp" android:paddingLeft="10dp" android:paddingTop="15dp"
            >
        <TextView
                android:layout_width="303dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Search for a car number."
                android:id="@+id/textView" android:layout_gravity="center"
                android:typeface="normal" android:textSize="30dp" android:layout_weight="0.05"
                android:paddingTop="25dp"/>
    </LinearLayout>
</LinearLayout>